<% wrap_layout :layout do %>
  <h1><a href="/">Learn X in Y minutes</a></h2>
  <h2>Where X=<%= data.page.language %></h2>
  <% if data.page.filename %>
    <p class="filelink">
    Get the code: <a href="/docs/files/<%= data.page.filename %>"><%= data.page.filename %></a>
    </p>
  <% end %>
  <div id="doc">
    <%= yield %>
    <hr>
    <p>Got a suggestion? A correction, perhaps?
    <a href="https://github.com/adambard/learnxinyminutes-docs/issues/new">Open an Issue</a> on the Github Repo, or make a pull request yourself!</p>
    <p class="contributed">
    Originally contributed by
    <%= authors[data.page.language][0][0] %>, and updated by
    <a href="https://github.com/adambard/learnxinyminutes-docs/blame/master/<%= current_page.path.split('/')[1] %>.markdown">
    <%= contributors[data.page.language] %>
    <%= if contributors[data.page.language] == 1 then "contributor" else "contributors" end %>
  </a>
    </p>

    <footer>
    <a style="float: left" rel="license" href="http://creativecommons.org/licenses/by-sa/3.0/deed.en_US"><img alt="Creative Commons License" style="border-width:0" src="http://i.creativecommons.org/l/by-sa/3.0/88x31.png" /></a>
    <p>
    &copy; 2013
    <% authors[data.page.language].each_with_index do |author, ii| %>
      <% if author[1] %>
        <a href="<%= author[1] %>"><%= author[0] %></a><%= ',' unless ii >= authors[data.page.language].length - 1 %>
      <% else %>
        <%= author[0] %><%= ',' unless ii < authors[data.page.language].length %>
      <% end %>
    <% end %>
    </p>

    </footer>
  </div>
<% end %>
